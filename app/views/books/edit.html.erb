<!-- Bookの編集ビュー -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h1>Editing Book</h1>
      
      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= @book.errors.count %> error(s) prohibited this book from being saved:</strong>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @book, url: book_path(@book.id), method: :patch, class: "form" do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %>
      
    <div>
      <%= link_to "Show", book_path(@book) %>
      <a>|</a>
      <%= link_to "Back", books_path %>
    </div>
    </div>
  </div>
</div>