<!--Bookの編集ビュー-->
<h1>Editing Book</h1>
<div class="container">
  <div class="row">
    
    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    
      <h4>Title</h4>
      <%= f.text_field :title %>
      
      <h4>opinion</h4>
      <%= f.text_area :body %>
      
      <%= f.submit 'Update Book' %>
      
    <% end %>
  </div>
</div>
