<!--左サイドバー部の部分テンプレート-->
<div class="container">
    <div class="row">
        <!--ユーザー情報-->
        <h4>User info</h4>
        <%= image_tag user.get_profile_image(100, 100) %>
        <table class="table table-striped">
          <tr>
            <th>name</th>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= user.introduction %></td>
          </tr>
        </table>
        <!--プロフィール編集アイコン-->
        <%= link_to edit_user_path(user) do%>
        <i class="fas fa-user-cog"></i>
        <% end %>

        <!--books 投稿ページのビュー-->
        
        <h4>New book</h4>
          <%= form_with model:book do |f| %>
          
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
              
            <%= f.submit 'Create Book' %>
          <% end %>
    </div>
</div>