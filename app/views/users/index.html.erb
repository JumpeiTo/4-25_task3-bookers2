<!--ユーザー一覧のビュー-->

<div class="container">
  <div class="row">
    <!--左側-->
    <div class="col-lg-4">
      <!--部分テンプレートuserにカレントユーザーを定義-->
      <%= render 'books/list', user: current_user ,book: @book %>
    </div>
    
    <!--右側のユーザーの一覧-->
    <div class="col-lg-8">
      <h2>Users</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>