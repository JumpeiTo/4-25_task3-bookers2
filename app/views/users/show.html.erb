<!--userの詳細ビュー-->

<div class="container px-5 px-sm-0">
  <div class="row">
    <!--左側-->
    <div class="col-md-3">
      <!--部分テンプレートuserにカレントユーザーを定義-->
      <%= render 'books/list', user: @user, book: @book %>
    </div>
    
    <!--右側 そのユーザーの投稿一覧 -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag @user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

